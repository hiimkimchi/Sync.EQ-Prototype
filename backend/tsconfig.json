{
  "compilerOptions": {
    "target": "es2022",                 
    "module": "es2022",               
    "outDir": "./dist",                 
    "rootDir": "./",                    
    "strict": true,                     
    "esModuleInterop": true,
    "moduleResolution": "node",            
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true                
  },
  "include": ["*.ts", "**/*.ts"]
}
